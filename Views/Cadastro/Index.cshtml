@model ProjetoTi.Models.Usuario
@{
    ViewData["Title"] = "Cadastre-se";
    Layout = null; // troque para "_Layout" se você tiver um layout compartilhado
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SuporteTI IA</title>

    <style>
        :root {
            --bg: #f6f8fb;
            --card: #ffffff;
            --header-bg: #2563eb;
            --text: #111827;
            --header-text: #ffffff;
            --muted: #6b7280;
            --accent: #2563eb;
        }

        /* Reset e layout */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial;
            background: var(--bg);
            color: var(--text);
        }

        .signup-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
            box-sizing: border-box;
        }

        .card {
            background: var(--card);
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(16,24,40,0.06);
            width: 100%;
            max-width: 420px;
            display: flex;
            flex-direction: column;
            gap: 18px;
            overflow: hidden;
        }

        .card-header {
            background: var(--header-bg);
            color: var(--header-text);
            padding: 20px;
            text-align: center;
        }

        .brand .logo {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            background: #1e40af;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 24px;
            margin-bottom: 8px;
        }

        .brand h1 {
            font-size: 22px;
            margin: 0;
        }

        .brand p {
            font-size: 13px;
            margin: 4px 0 0 0;
            color: var(--header-text);
        }

        .card-body {
            padding: 18px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 12px;
            width: 100%;
            box-sizing: border-box;
        }

        label {
            font-size: 14px;
            margin-bottom: 4px;
        }

        input, select {
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            font-size: 14px;
            width: 100%;
            box-sizing: border-box;
        }

        .password-wrapper {
            display: flex;
            width: 100%;
            gap: 8px;
        }

            .password-wrapper input {
                flex: 1;
            }

        .toggle-btn {
            background: transparent;
            border: none;
            cursor: pointer;
            font-size: 18px;
            padding: 0 6px;
            color: var(--text);
        }

        .btn.primary {
            background: var(--accent);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 10px 16px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            margin-top: 8px;
        }

        .signup, .card-footer {
            text-align: center;
            font-size: 13px;
            color: var(--muted);
        }

            .signup a, .link {
                color: var(--accent);
                text-decoration: none;
            }

                .signup a:hover, .link:hover {
                    text-decoration: underline;
                }

        .form-message {
            margin-top: 8px;
            font-size: 13px;
            color: #dc2626;
        }

            .form-message.success {
                color: #16a34a;
            }

        /* escape do media para Razor: use @@media */
        @@media (max-width: 520px) {
            .card

        {
            max-width: 92%;
        }

        .brand h1 {
            font-size: 20px;
        }

        }
    </style>
</head>
<body>
    <main class="signup-page">
        <div class="card">
            <header class="card-header">
                <div class="brand">
                    <div class="logo">🔧</div>
                    <div>
                        <h1>SuporteTI IA</h1>
                        <p class="tagline">Cadastre-se para acessar o sistema</p>
                    </div>
                </div>
            </header>

            <section class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="form-message success">@TempData["Success"]</div>
                }
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="form-message">@Html.ValidationSummary()</div>
                }

                <form asp-action="Index" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <label for="Nome">Nome</label>
                    <input asp-for="Nome" id="Nome" name="Nome" type="text" placeholder="Seu nome completo" required />

                    <label for="Email">E-mail</label>
                    <input asp-for="Email" id="Email" name="Email" type="email" placeholder="seu@exemplo.com" required />

                    <label for="Senha">Senha</label>
                    <div class="password-wrapper">
                        <input asp-for="Senha" id="Senha" name="Senha" type="password" placeholder="••••••••" required minlength="6" />
                        <button type="button" class="toggle-btn" id="togglePassword" aria-label="Mostrar senha">👁️</button>
                    </div>

                    <label for="confirmPassword">Confirmar Senha</label>
                    <div class="password-wrapper">
                        <input id="confirmPassword" name="confirmPassword" type="password" placeholder="••••••••" required minlength="6" />
                        <button type="button" class="toggle-btn" id="toggleConfirmPassword" aria-label="Mostrar senha">👁️</button>
                    </div>

                    <label for="Papel">Tipo de usuário</label>
                    <select asp-for="Papel" id="Papel" name="Papel" required>
                        <option value="colaborador">Colaborador / Cliente</option>
                        <option value="tecnico">Técnico</option>
                    </select>

                    <button class="btn primary" type="submit">Cadastrar</button>

                    <div class="signup">
                        <span>Já tem uma conta?</span>
                        <a class="link" asp-controller="Login" asp-action="Index">Entrar</a>
                    </div>

                    <div id="formMessage" role="status" class="form-message" aria-live="polite"></div>
                </form>
            </section>

            <footer class="card-footer">
                <small>Universidade • Projeto de Sistemas • LGPD aplicada</small>
            </footer>
        </div>
    </main>

    <script>
        (function(){
          const togglePassword = document.getElementById('togglePassword');
          const passwordInput = document.getElementById('Senha');
          if(togglePassword && passwordInput){
            togglePassword.addEventListener('click', () => {
              passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
            });
          }

          const toggleConfirm = document.getElementById('toggleConfirmPassword');
          const confirmInput = document.getElementById('confirmPassword');
          if(toggleConfirm && confirmInput){
            toggleConfirm.addEventListener('click', () => {
              confirmInput.type = confirmInput.type === 'password' ? 'text' : 'password';
            });
          }

          const form = document.querySelector('form');
          const msgEl = document.getElementById('formMessage');

          if(form){
            form.addEventListener('submit', (e) => {
              const senha = document.getElementById('Senha')?.value || '';
              const confirm = document.getElementById('confirmPassword')?.value || '';
              if(senha !== confirm){
                e.preventDefault();
                if(msgEl) msgEl.textContent = "As senhas não coincidem!";
              } else {
                if(msgEl) msgEl.textContent = "";
              }
            });
          }
        })();
    </script>
</body>
</html>
