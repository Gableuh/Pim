@{
    Layout = null;
}
@model List<ProjetoTi.Models.Chamado>
@{
    ViewData["Title"] = "Dashboard";
    var usuarioNome = ViewBag.NomeUsuario?.ToString() ?? "Usuário";
    var papel = Context.Session.GetString("Papel") ?? "colaborador";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] — SuporteTI IA</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        :root {
            --bg: #f6f8fb;
            --card: #ffffff;
            --accent: #2563eb;
            --text: #111827;
            --muted: #6b7280;
            --success: #10b981;
            --danger: #ef4444;
            --shadow: 0 6px 18px rgba(16,24,40,0.06);
            --radius: 12px;
            --font: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, Arial;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: var(--font);
        }

        body {
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .app {
            display: grid;
            grid-template-columns: 260px 1fr;
            gap: 24px;
            padding: 28px;
            transition: 0.3s ease;
        }

        /* Sidebar */
        .sidebar {
            background: transparent;
            border-radius: var(--radius);
            padding: 18px;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease;
            z-index: 200;
        }

        .brand {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 18px;
        }

            .brand .logo {
                width: 44px;
                height: 44px;
                border-radius: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 20px;
            }

            .brand h1 {
                font-size: 18px;
                margin-top: 8px;
            }

            .brand p {
                color: var(--muted);
                font-size: 13px;
            }

        .nav {
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin-top: 8px;
        }

            .nav button {
                border: 0;
                background: transparent;
                text-align: left;
                padding: 10px 12px;
                border-radius: 10px;
                cursor: pointer;
                font-size: 15px;
                color: var(--text);
                display: flex;
                align-items: center;
                gap: 10px;
                transition: background 0.2s;
            }

                .nav button:hover {
                    background: rgba(37,99,235,0.06);
                }

                .nav button.active {
                    background: rgba(37,99,235,0.12);
                    color: var(--accent);
                }

        /* Conteúdo principal */
        .main {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .topbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .hamburger {
            display: none;
            background: transparent;
            border: 0;
            font-size: 22px;
            cursor: pointer;
            color: #000;
        }

        .panel {
            background: var(--card);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 20px;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px,1fr));
            gap: 16px;
            margin-top: 14px;
        }

        .card {
            background: var(--card);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 16px;
            display: flex;
            flex-direction: column;
            gap: 8px;
            position: relative;
            transition: transform 0.15s;
        }

            .card:hover {
                transform: translateY(-4px);
            }

            .card .id {
                position: absolute;
                top: 12px;
                right: 12px;
                color: rgba(107,114,128,0.4);
                font-weight: 600;
            }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 500;
        }

            .badge.aberto {
                background: rgba(34,197,94,0.15);
                color: var(--success);
            }

            .badge.fechado {
                background: rgba(239,68,68,0.15);
                color: var(--danger);
            }

        .muted {
            color: var(--muted);
            font-size: 14px;
        }

        .btn {
            border: none;
            border-radius: 10px;
            background: var(--accent);
            color: white;
            padding: 8px 12px;
            cursor: pointer;
            font-weight: 500;
            align-self: start;
            transition: background 0.2s;
        }

            .btn:hover {
                background: #1e4ed8;
            }

        /* Filtro */
        .filters {
            display: flex;
            gap: 0.8rem;
            flex-wrap: wrap;
            margin-bottom: 1rem;
        }

            .filters input, .filters select {
                padding: 0.6rem 0.8rem;
                border: 1px solid #ccc;
                border-radius: 8px;
                font-family: inherit;
            }

        /* Botão fixo de sair */
        .fixed {
            position: fixed;
            top: 16px;
            right: 16px;
            padding: 10px 16px;
            border: none;
            border-radius: 12px;
            background: var(--accent);
            color: white;
            cursor: pointer;
            font-weight: 600;
            z-index: 300;
            box-shadow: var(--shadow);
        }

        /* Overlay */
        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.4);
            backdrop-filter: blur(2px);
            z-index: 150;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease;
        }

            .overlay.show {
                opacity: 1;
                visibility: visible;
            }

        /* Mobile */
        @@media (max-width:900px) {
            .app

        {
            grid-template-columns: 1fr;
            padding: 16px;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            transform: translateX(-110%);
            width: 240px;
            background: rgba(255,255,255,0.9);
            box-shadow: 4px 0 12px rgba(0,0,0,0.1);
        }

            .sidebar.open {
                transform: translateX(0);
            }

        .hamburger {
            display: inline-block;
        }

        }
    </style>
</head>
<body>
    <!-- Botão sair -->
    <button class="fixed" onclick="location.href='@Url.Action("Logout","Login")'">🚪 Sair</button>

    <!-- Overlay -->
    <div class="overlay" id="overlay"></div>

    <div class="app">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="brand">
                <div class="logo">👤</div>
                <h1>SuporteTI IA</h1>
                <p>@usuarioNome</p>
            </div>
            <nav class="nav">
                <button class="nav-item active" data-view="todos">📋 Todos os Chamados</button>
                <button class="nav-item" data-view="abrir">➕ Abrir Chamado</button>
                <button class="nav-item" data-view="meus">🙋 Meus Chamados</button>
            </nav>
        </aside>

        <!-- Conteúdo principal -->
        <main class="main">
            <header class="topbar">
                <div style="display:flex; align-items:center; gap:12px;">
                    <button class="hamburger" id="toggleSidebar">☰</button>
                    <div>
                        <h2>Bem-vindo, @usuarioNome</h2>
                        <p class="muted">Painel de chamados</p>
                    </div>
                </div>
            </header>

            <!-- Todos os Chamados -->
            <section id="view-todos" class="panel">
                <h3>Todos os Chamados</h3>
                <form method="post" action="@Url.Action("PesquisarChamados","Home")" class="filters">
                    <input type="text" name="id" placeholder="ID" />
                    <input type="text" name="assunto" placeholder="Assunto" />
                    <input type="date" name="data" />
                    <select name="prioridade">
                        <option value="">Status</option>
                        <option value="Aberto">Aberto</option>
                        <option value="Fechado">Fechado</option>
                    </select>
                    <button type="submit" class="btn">Filtrar</button>
                </form>

                <div class="grid" id="grid-todos">
                    @foreach (var c in Model)
                    {
                        <div class="card">
                            <span class="id">#@c.Id</span>
                            <h4>@c.Titulo</h4>
                            <p class="muted">@c.Descricao</p>
                            <p><strong>Usuário:</strong> @c.NomeUsuario</p>
                            <p><strong>Status:</strong> <span class="badge @(c.Status.ToLower())">@c.Status</span></p>
                            <p><strong>Data:</strong> @c.DataAbertura.ToString("dd/MM/yyyy HH:mm")</p>

                            @if (papel.Equals("tecnico", StringComparison.OrdinalIgnoreCase) && !c.Status.Equals("Fechado", StringComparison.OrdinalIgnoreCase))
                            {
                                <a class="btn" href="@Url.Action("FecharChamado", "Home", new { id = c.Id })">Fechar</a>
                            }
                        </div>
                    }
                </div>
            </section>

            <!-- Abrir chamado -->
            <section id="view-abrir" class="panel" style="display:none;">
                <h3>Abrir Novo Chamado</h3>
                <form method="post" action="@Url.Action("CriarChamado","Home")">
                    <label>Título</label>
                    <input type="text" name="titulo" required style="width:100%;padding:8px;border-radius:8px;border:1px solid #ccc;">
                    <label>Descrição</label>
                    <textarea name="descricao" rows="4" style="width:100%;padding:8px;border-radius:8px;border:1px solid #ccc;"></textarea>
                    <button class="btn" type="submit">Enviar</button>
                </form>
            </section>

            <!-- Meus chamados -->
            <section id="view-meus" class="panel" style="display:none;">
                <h3>Meus Chamados</h3>
                <div class="grid">
                    @foreach (var c in Model.Where(x => x.NomeUsuario == usuarioNome))
                    {
                        <div class="card">
                            <span class="id">#@c.Id</span>
                            <h4>@c.Titulo</h4>
                            <p class="muted">@c.Descricao</p>
                            <p><strong>Status:</strong> <span class="badge @(c.Status.ToLower())">@c.Status</span></p>
                            <p><strong>Data:</strong> @c.DataAbertura.ToString("dd/MM/yyyy HH:mm")</p>

                            @if (papel.Equals("tecnico", StringComparison.OrdinalIgnoreCase) && !c.Status.Equals("Fechado", StringComparison.OrdinalIgnoreCase))
                            {
                                <a class="btn" href="@Url.Action("FecharChamado", "Home", new { id = c.Id })">Fechar</a>
                            }
                        </div>
                    }
                </div>
            </section>
        </main>
    </div>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleSidebar = document.getElementById('toggleSidebar');
        const overlay = document.getElementById('overlay');

        toggleSidebar?.addEventListener('click', () => {
            sidebar.classList.toggle('open');
            overlay.classList.toggle('show');
        });
        overlay.addEventListener('click', () => {
            sidebar.classList.remove('open');
            overlay.classList.remove('show');
        });

        // Navegação entre seções
        const navButtons = document.querySelectorAll('.nav-item');
        const views = {
            todos: document.getElementById('view-todos'),
            abrir: document.getElementById('view-abrir'),
            meus: document.getElementById('view-meus')
        };
        navButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                navButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                const view = btn.dataset.view;
                Object.keys(views).forEach(k => views[k].style.display = (k === view ? '' : 'none'));
            });
        });
    </script>
</body>
</html>
