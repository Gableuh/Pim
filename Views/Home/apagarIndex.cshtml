@{
    ViewData["Title"] = "Login — SuporteTI IA";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #2563eb, #1e3a8a);
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-box {
            background: white;
            color: #111;
            padding: 2rem;
            border-radius: 1rem;
            width: 100%;
            max-width: 350px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        h2 {
            text-align: center;
            margin-bottom: 1rem;
        }

        label {
            font-weight: bold;
        }

        input, select {
            width: 100%;
            padding: 0.5rem;
            margin: 0.4rem 0 1rem 0;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        button {
            width: 100%;
            background: #2563eb;
            color: white;
            border: none;
            padding: 0.6rem;
            border-radius: 8px;
            cursor: pointer;
        }

            button:hover {
                background: #1e3a8a;
            }

        .error {
            color: red;
            font-size: 0.9rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>SuporteTI IA</h2>
        <form method="post" action="@Url.Action("Index", "Login")">
            <label>Email</label>
            <input type="email" name="email" required />

            <label>Senha</label>
            <input type="password" name="password" required />

            <label>Tipo de Acesso</label>
            <select name="role" required>
                <option value="">Selecione</option>
                <option value="colaborador">Colaborador</option>
                <option value="tecnico">Técnico</option>
                <option value="gestor">Gestor</option>
            </select>

            <button type="submit">Entrar</button>

            @if (ViewBag.MensagemErro != null)
            {
                <p class="error">@ViewBag.MensagemErro</p>
            }
        </form>
    </div>
</body>
</html>
