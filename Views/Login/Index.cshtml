@{
    Layout = null;
    <!-- remove layout compartilhado pra manter a tela isolada -->
}

@if (TempData["Erro"] != null)
{
    <div style="color:red">@TempData["Erro"]</div>
}
 
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SuporteTI IA — Login</title>

    <style>
        :root {
            --bg: #f6f8fb;
            --card: #ffffff;
            --header-bg: #2563eb;
            --text: #111827;
            --header-text: #ffffff;
            --muted: #6b7280;
            --accent: #2563eb;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial;
            background: var(--bg);
            color: var(--text);
        }

        .login-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .card {
            background: var(--card);
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(16,24,40,0.06);
            width: 100%;
            max-width: 400px;
            display: flex;
            flex-direction: column;
            gap: 18px;
            overflow: hidden;
        }

        .card-header {
            background: var(--header-bg);
            color: var(--header-text);
            padding: 24px 18px;
            text-align: center;
        }

        .brand .logo {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            background: #1e40af;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 24px;
            margin-bottom: 12px;
        }

        .brand h1 {
            font-size: 28px;
            margin: 0;
        }

        .brand p {
            font-size: 14px;
            margin: 4px 0 0 0;
            color: var(--header-text);
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 12px;
            padding: 18px;
            width: 100%;
            box-sizing: border-box;
        }

        label {
            font-size: 14px;
            margin-bottom: 4px;
        }

        input, select {
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            font-size: 14px;
            width: 100%;
            box-sizing: border-box;
        }

            input[type="password"]::-ms-reveal,
            input[type="password"]::-ms-clear,
            input[type="password"]::-webkit-contacts-auto-fill-button,
            input[type="password"]::-webkit-password-toggle-button {
                display: none !important;
                -webkit-appearance: none;
            }

        .password-wrapper {
            display: flex;
            width: 100%;
        }

            .password-wrapper input {
                flex: 1;
            }

            .password-wrapper button {
                background: transparent;
                border: none;
                cursor: pointer;
                font-size: 16px;
                padding: 0 6px;
                color: var(--text);
            }

        .row.between {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .remember {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 14px;
            color: var(--text);
        }

            .remember input[type="checkbox"] {
                accent-color: var(--accent);
                width: 16px;
                height: 16px;
                cursor: pointer;
            }

        .btn.primary {
            background: var(--accent);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 10px 16px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            margin-top: 8px;
        }

        .signup, .card-footer {
            text-align: center;
            font-size: 13px;
            color: var(--muted);
        }

            .signup a, .link {
                color: var(--accent);
                text-decoration: none;
            }

                .signup a:hover, .link:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <main class="login-page">
        <div class="card">
            <header class="card-header">
                <div class="brand">
                    <div class="logo">🔧</div>
                    <div>
                        <h1>SuporteTI IA</h1>
                        <p class="tagline">Gestão de chamados com apoio de IA</p>
                    </div>
                </div>
            </header>

            <section class="card-body">
                <!-- 🔹 ALTERADO: form agora envia pro Controller MVC -->
                <form asp-controller="Login" asp-action="Index" method="post" novalidate>
                    <label for="email">E-mail</label>
                    <input id="email" name="email" type="email" placeholder="seu@exemplo.com" required>

                    <label for="password">Senha</label>
                    <div class="password-wrapper">
                        <input id="password" name="password" type="password" placeholder="••••••••" required minlength="6" autocomplete="new-password">
                        <button type="button" id="togglePassword" aria-label="Mostrar senha">👁️</button>
                    </div>

                    <label for="role">Entrar como</label>
                    <select id="role" name="role" required>
                        <option value="colaborador">Colaborador / Cliente</option>
                        <option value="tecnico">Técnico</option>
                    </select>

                    <div class="row between">
                        <div class="remember">
                            <input id="remember" name="remember" type="checkbox">
                            <label for="remember">Lembrar-me</label>
                        </div>
                        <a class="link" href="/RecuperarSenha">Esqueci a senha</a>
                    </div>

                    <!-- 🔹 Mostra mensagem de erro do servidor -->
                    @if (ViewBag.Erro != null)
                    {
                        <p style="color:red; text-align:center;">@ViewBag.Erro</p>
                    }

                    <button class="btn primary" type="submit">Entrar</button>

                    <div class="signup">
                        <span>Não tem conta?</span>
                        <a class="link" href="/Cadastro">Cadastre-se</a>
                    </div>

                    <div id="formMessage" role="status" class="form-message" aria-live="polite"></div>
                </form>
            </section>

            <footer class="card-footer">
                <small>Universidade • Projeto de Sistemas • LGPD aplicada</small>
            </footer>
        </div>
    </main>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');
        togglePassword.addEventListener('click', () => {
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
        });
    </script>
</body>
</html>
