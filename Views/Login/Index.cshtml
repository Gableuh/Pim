@{
    ViewData["Title"] = "Login";
    Layout = null;
    string emailPreenchido = ViewBag.Email as string;
    string roleSelecionado = ViewBag.Role as string;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SuporteTI IA — Login</title>

    <style>
        :root {
            --bg: #f6f8fb;
            --card: #ffffff;
            --header-bg: #2563eb;
            --text: #111827;
            --header-text: #ffffff;
            --muted: #6b7280;
            --accent: #2563eb;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial;
            background: var(--bg);
            color: var(--text);
        }

        .login-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .card {
            background: var(--card);
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(16,24,40,0.06);
            width: 100%;
            max-width: 400px;
            display: flex;
            flex-direction: column;
            gap: 18px;
            overflow: hidden;
        }

        .card-header {
            background: var(--header-bg);
            color: var(--header-text);
            padding: 24px 18px;
            text-align: center;
        }

        .brand .logo {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            background: #1e40af;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 24px;
            margin-bottom: 12px;
        }

        .brand h1 {
            font-size: 28px;
            margin: 0;
        }

        .brand p {
            font-size: 14px;
            margin: 4px 0 0 0;
            color: var(--header-text);
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 12px;
            padding: 18px;
            width: 100%;
            box-sizing: border-box;
        }

        label {
            font-size: 14px;
            margin-bottom: 4px;
        }

        input, select {
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            font-size: 14px;
            width: 100%;
            box-sizing: border-box;
        }

        .password-wrapper {
            display: flex;
            width: 100%;
        }

        .password-wrapper input {
            flex: 1;
        }

        .password-wrapper button {
            background: transparent;
            border: none;
            cursor: pointer;
            font-size: 16px;
            padding: 0 6px;
            color: var(--text);
        }

        .btn.primary {
            background: var(--accent);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 10px 16px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            margin-top: 8px;
        }

        .form-message {
            margin-top: 8px;
            font-size: 13px;
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>
    <main class="login-page">
        <div class="card">
            <header class="card-header">
                <div class="brand">
                    <div class="logo">🔧</div>
                    <div>
                        <h1>SuporteTI IA</h1>
                        <p class="tagline">Gestão de chamados com apoio de IA</p>
                    </div>
                </div>
            </header>

            <section class="card-body">
                <form method="post" action="@Url.Action("Index","Login")">
                    <label for="email">E-mail</label>
                    <input id="email" name="email" type="email" placeholder="seu@exemplo.com" value="@emailPreenchido" required>

                    <label for="password">Senha</label>
                    <div class="password-wrapper">
                        <input id="password" name="password" type="password" placeholder="••••••••" required>
                        <button type="button" id="togglePassword" aria-label="Mostrar senha">👁️</button>
                    </div>

                    <label for="role">Entrar como</label>
                    <select id="role" name="role" required>
                        @if (roleSelecionado == "colaborador")
                        {
                            <option value="colaborador" selected>Colaborador / Cliente</option>
                        }
                        else
                        {
                            <option value="colaborador">Colaborador / Cliente</option>
                        }

                        @if (roleSelecionado == "tecnico")
                        {
                            <option value="tecnico" selected>Técnico</option>
                        }
                        else
                        {
                            <option value="tecnico">Técnico</option>
                        }
                    </select>


                    <button class="btn primary" type="submit">Entrar</button>

                    @if (ViewBag.MensagemErro != null)
                    {
                        <div class="form-message">@ViewBag.MensagemErro</div>
                    }
                </form>
            </section>

            <footer class="card-footer" style="text-align:center;font-size:13px;color:var(--muted);padding:12px;">
                <small>Universidade • Projeto de Sistemas • LGPD aplicada</small>
            </footer>
        </div>
    </main>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');
        togglePassword.addEventListener('click', () => {
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
        });
    </script>
</body>
</html>
